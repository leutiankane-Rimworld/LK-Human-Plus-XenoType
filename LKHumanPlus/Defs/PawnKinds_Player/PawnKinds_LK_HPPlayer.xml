<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<PawnKindDef Name="BaseLK_HumanPlusColonyPawn" Abstract="True">
		<race>Human</race>
		<label>Evolved Humanoid</label>
		<minGenerationAge>20</minGenerationAge>
		<defaultFactionType>LKHumanPlus_PlayerFaction</defaultFactionType>
	<xenotypeSet>
      <xenotypeChances>
        <LKHumanPlus MayRequire="Ludeon.RimWorld.Biotech">999.0</LKHumanPlus>
		</xenotypeChances>
		</xenotypeSet>
		<isFighter>true</isFighter>
		<apparelIgnoreSeasons>true</apparelIgnoreSeasons>
		<chemicalAddictionChance>0</chemicalAddictionChance>
		<backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
		<apparelAllowHeadgearChance>1.0</apparelAllowHeadgearChance>
		<invNutrition>2.55</invNutrition>
		<inventoryOptions>
			<skipChance>0.1</skipChance>
			<subOptionsChooseOne>
				<li>
					<thingDef>MedicineUltratech</thingDef>
					<countRange>1</countRange>
				</li>
				<li>
					<thingDef>Silver</thingDef>
					<countRange>10~300</countRange>
				</li>
			</subOptionsChooseOne>
		</inventoryOptions>
		<gearHealthRange>1~1</gearHealthRange>
		<itemQuality>Good</itemQuality>
		<apparelTags Inherit="False">
      <li>IndustrialAdvanced</li>
      <li>IndustrialMilitaryBasic</li>
      <li>IndustrialMilitaryAdvanced</li>
	  <li MayRequire="LeutianKane.ubergear">LK_Category_Ultimate_ArmorLight</li>
	  <li MayRequire="LeutianKane.ubergear">LK_Category_Ultimate_HeadgearLight</li>
		</apparelTags>
		<specificApparelRequirements Inherit="False">
            <li>
			    <requiredTag>IndustrialBasic</requiredTag>
                <bodyPartGroup>Torso</bodyPartGroup>
                <apparelLayer>OnSkin</apparelLayer>
                <stuff>Synthread</stuff>
            </li>
            <li>
			    <requiredTag>IndustrialBasic</requiredTag>
                <bodyPartGroup>Legs</bodyPartGroup>
                <apparelLayer>OnSkin</apparelLayer>
                <stuff>Synthread</stuff>
            </li>
        </specificApparelRequirements>
		<weaponTags Inherit="false">
      <li>IndustrialGunAdvanced</li>
      <li>SpacerGun</li>
      <li>SniperRifle</li>
	  <li MayRequire="LeutianKane.ubergear">LK_Category_Ultimate_Weapons</li>
	  </weaponTags>
	  <combatPower>240</combatPower>
		<skills>
      <li>
        <skill>Shooting</skill>
        <range>6~10</range>
      </li>
    </skills>
	<initialWillRange>3~5</initialWillRange>
    <initialResistanceRange>13~21</initialResistanceRange>
    <useFactionXenotypes>true</useFactionXenotypes>
	<disallowedTraits>
      <li>Brawler</li>
    </disallowedTraits>
		<techHediffsTags>
		<li>Simple</li>
      <li>ImplantEmpireCommon</li>
		<li>Advanced</li>
		</techHediffsTags>
		<techHediffsChance>0.1</techHediffsChance>
	</PawnKindDef>

	<PawnKindDef ParentName="BaseLK_HumanPlusColonyPawn">
		<defName>LK_HumanPlus_Recruit</defName>
		<label>evolved humanoid</label>
		<isFighter>true</isFighter>
		<itemQuality>Good</itemQuality>
		<weaponTags Inherit="false">
			<li>IndustrialGunAdvanced</li>
			<li MayRequire="LeutianKane.ubergear">LK_Category_Ultimate_Weapons</li>
      <li>SpacerGun</li>
      <li>SniperRifle</li>
		</weaponTags>
		<combatPower>240</combatPower>
		<apparelTags Inherit="False">
      <li>IndustrialAdvanced</li>
      <li>IndustrialMilitaryBasic</li>
      <li>IndustrialMilitaryAdvanced</li>
	  <li MayRequire="LeutianKane.ubergear">LK_Category_Ultimate_ArmorLight</li>
	  <li MayRequire="LeutianKane.ubergear">LK_Category_Ultimate_HeadgearLight</li>
		</apparelTags>
		<specificApparelRequirements Inherit="False">
            <li>
			    <requiredTag>IndustrialBasic</requiredTag>
                <bodyPartGroup>Torso</bodyPartGroup>
                <apparelLayer>OnSkin</apparelLayer>
                <stuff>Synthread</stuff>
            </li>
            <li>
                <requiredTag>IndustrialBasic</requiredTag>			
                <bodyPartGroup>Legs</bodyPartGroup>
                <apparelLayer>OnSkin</apparelLayer>
                <stuff>Synthread</stuff>
            </li>
        </specificApparelRequirements>
		<modExtensions>
			<li Class="TabulaRasa.DefModExt_PawnKindExtended">
				<randomAdditionalHediff>false</randomAdditionalHediff>
				<clearChronicIllness>True</clearChronicIllness>
				<clearAddictions>True</clearAddictions>
			</li>
		</modExtensions>
	</PawnKindDef>

</Defs>
