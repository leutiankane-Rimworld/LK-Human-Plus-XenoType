<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ScenarioDef ParentName="ScenarioBase">
		<defName>LK_HumanPlusStart</defName>
		<label>Evolved Humanoids</label>
		<description>The four of you arrive on this world, raw colonists sent to establish a self sufficient outpost as part of a new long term settlement. New recruits will be sent to you regularly.\n\n Note: Requires Tabula Rasa Mod for reinforcements to work. Note: scenario is intended for 4 pawns to start .</description>
		<scenario>
			<summary>Four Evolved Humanoids neutrally aligned.</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>LKHumanPlus_PlayerFaction</factionDef>
			</playerFaction>
			<parts>
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns_Xenotypes">
          <def>ConfigurePawnsXenotypes</def>
          <pawnChoiceCount>4</pawnChoiceCount>
          <overrideKinds>
            <li>
              <xenotype>LKHumanPlus</xenotype>
              <pawnKind>LK_HumanPlus_Recruit</pawnKind>
            </li>
          </overrideKinds>
          <xenotypeCounts>
            <li>
              <xenotype>LKHumanPlus</xenotype>
              <count>4</count>
			  <requiredAtStart>true</requiredAtStart>
            </li>
			 
          </xenotypeCounts>
        </li>
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
					<method>DropPods</method>
				</li>
				<li Class="TabulaRasa.ScenPart_ReinforcementJoins">
					<def>TabulaRasa_ReinforcementJoins</def>
					<intervalDays>3</intervalDays>
					<maxPawns>12</maxPawns>
					<repeat>True</repeat>
					<pawnKind>LK_HumanPlus_Recruit</pawnKind>
					<arrivalMode>DropPods</arrivalMode>
					<faction>LK_HumanPlus</faction>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Silver</thingDef>
					<count>800</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MealSurvivalPack</thingDef>
					<count>500</count>
				</li>
				
				
				
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>ComponentIndustrial</thingDef>
					<count>100</count>
				</li>
				
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>Steel</thingDef>
					<count>2500</count>
					<allowRoofed>True</allowRoofed>
				</li>
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>WoodLog</thingDef>
					<count>1500</count>
					<allowRoofed>True</allowRoofed>
				</li>
				<li Class="ScenPart_ScatterThingsAnywhere">
					<def>ScatterThingsAnywhere</def>
					<thingDef>ShipChunk</thingDef>
					<count>7</count>
				</li>
				
				<li Class="ScenPart_StartingThing_Defined">
                <def>StartingThing_Defined</def>
                <thingDef>Bow_Short</thingDef>
                <count>4</count>
                </li>
				<li Class="ScenPart_StartingThing_Defined">
                <def>StartingThing_Defined</def>
                <thingDef>MeleeWeapon_Knife</thingDef>
                <stuff>Jade</stuff>
				<count>4</count>
                </li>
				<li Class="ScenPart_GameStartDialog">
					<def>GameStartDialog</def>
					<text> Your Group of Evolved Humans awakens from cryosleep to find that you have landed on a strange uncharted Rimworld and it is up to you to forge your way to greatness with what meager resources you have or can find. </text>
					<textKey>GameStartDialog</textKey>
					<closeSound>GameStartSting</closeSound>
				</li>
				
				
			</parts>
		</scenario>
	</ScenarioDef>

	
