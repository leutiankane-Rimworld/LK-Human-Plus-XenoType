<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- GENE: Handles biological/physical systems -->
  <GeneDef>
    <defName>LK_VOIDGene</defName>
    <geneClass>Gene_Healing</geneClass>
    <label>V.O.I.D. Gene</label>
    <labelShortAdj>V.O.I.D.</labelShortAdj>
    <description>Carriers of this gene have achieved biological perfection by gentically engineering V.O.I.D. abilities. Every cell, every system operates at theoretical maximum efficiency. The body heals almost instantly, resists all harm, and performs at superhuman levels indefinitely. This gene enforces a matching trait that adds V.O.I.D. implant ability.</description>
    <iconPath>UI/Icons/Genes/Gene_VoidMaster</iconPath>
    <displayCategory>Archite</displayCategory>
    <displayOrderInCategory>999</displayOrderInCategory>
    <biostatCpx>1</biostatCpx>
    <biostatMet>1</biostatMet>
    <biostatArc>1</biostatArc>
    <marketValueFactor>299</marketValueFactor>
    
    <!-- Deathless and Ageless -->
    <biologicalAgeTickFactorFromAgeCurve>
      <points>
        <li>(0, 0)</li>
        <li>(999, 0)</li>
      </points>
    </biologicalAgeTickFactorFromAgeCurve>
    <preventPermanentWounds>true</preventPermanentWounds>
    
    <!-- Immunities and special properties -->
    <immuneToToxGasExposure>true</immuneToToxGasExposure>
    <dontMindRawFood>true</dontMindRawFood>
    <ignoreDarkness>true</ignoreDarkness>
    <foodPoisoningChanceFactor>0</foodPoisoningChanceFactor>
    <socialFightChanceFactor>0</socialFightChanceFactor>
    <aggroMentalBreakSelectionChanceFactor>0</aggroMentalBreakSelectionChanceFactor>
    <painFactor>0</painFactor>
    <painOffset>-100</painOffset>
<waterCellCost>0</waterCellCost>


    <!-- Physical stat offsets -->
    <statOffsets>
      <ArmorRating_Blunt>2</ArmorRating_Blunt>
      <ArmorRating_Sharp>2</ArmorRating_Sharp>
      <ArmorRating_Heat>2</ArmorRating_Heat>
      <CarryingCapacity>2</CarryingCapacity>
      <ComfyTemperatureMin>-2299</ComfyTemperatureMin>
      <ComfyTemperatureMax>2299</ComfyTemperatureMax>
      <ImmunityGainSpeed>10</ImmunityGainSpeed>
      <InjuryHealingFactor>9</InjuryHealingFactor>
      <MaxNutrition>2</MaxNutrition>
      <MeleeDamageFactor>2</MeleeDamageFactor>
      <MeleeDodgeChance>2</MeleeDodgeChance>
      <MeleeHitChance>2</MeleeHitChance>
      <MoveSpeed>2</MoveSpeed>
      <PainShockThreshold>2</PainShockThreshold>
      <PawnBeauty>3</PawnBeauty>
      <ToxicResistance>1</ToxicResistance>
      <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">1</ToxicEnvironmentResistance>
      <PsychicSensitivity>2</PsychicSensitivity>
    </statOffsets>
     <aptitudes>
    <Shooting>20</Shooting>
    <Melee>20</Melee>
    <Construction>20</Construction>
     <Mining>20</Mining>
    <Cooking>20</Cooking>
    <Plants>20</Plants>
    <Animals>20</Animals>
    <Crafting>20</Crafting>
    <Artistic>20</Artistic>
    <Medicine>20</Medicine>
    <Social>20</Social>
    <Intellectual>20</Intellectual>
    </aptitudes>
    <!--Stat bonuses-->
    <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>2</offset>
          </li>
      <li>
        <capacity>Moving</capacity>
        <offset>2</offset>
      </li>
      <li>
        <capacity>Manipulation</capacity>
        <offset>2</offset>
      </li>
      <li>
        <capacity>Breathing</capacity>
        <offset>2</offset>
      </li>
      <li>
        <capacity>BloodFiltration</capacity>
        <offset>2</offset>
      </li>
      <li>
        <capacity>BloodPumping</capacity>
        <offset>2</offset>
      </li>
      <li>
        <capacity>Metabolism</capacity>
        <offset>2</offset>
      </li>
      <li>
        <capacity>Eating</capacity>
        <offset>2</offset>
      </li>
      <li>
        <capacity>Talking</capacity>
        <offset>2</offset>
      </li>
      <li>
        <capacity>Hearing</capacity>
        <offset>2</offset>
      </li>
      <li>
        <capacity>Sight</capacity>
        <offset>2</offset>
      </li>
    </capMods>
    
    <!-- Physical stat multipliers -->
    <statFactors>
      <Flammability>0</Flammability>
      <IncomingDamageFactor>0.1</IncomingDamageFactor>
      <InjuryHealingFactor>9</InjuryHealingFactor>
      <LifespanFactor>999</LifespanFactor>
      <Mass>0.1</Mass>
      <MoveSpeed>2</MoveSpeed>
      <RestFallRateFactor>0.1</RestFallRateFactor>
      <RestRateMultiplier>2</RestRateMultiplier>
      <StaggerDurationFactor>0</StaggerDurationFactor>
      <FilthRate>0</FilthRate>
<BedHungerRateFactor>0</BedHungerRateFactor>
      <FoodPoisonChance>0</FoodPoisonChance>
      <RawNutritionFactor>2</RawNutritionFactor>
      <TrapSpringChance>0</TrapSpringChance>
<AimingDelayFactor>0.1</AimingDelayFactor>
<ShootingAccuracyPawn>2</ShootingAccuracyPawn>
<ShootingAccuracyFactor_Touch>2</ShootingAccuracyFactor_Touch>
<ShootingAccuracyFactor_Short>2</ShootingAccuracyFactor_Short>
<ShootingAccuracyFactor_Medium>2</ShootingAccuracyFactor_Medium>
<ShootingAccuracyFactor_Long>2</ShootingAccuracyFactor_Long>
<MortarMissRadiusFactor>0</MortarMissRadiusFactor>
      <SM_AcidDmgMult MayRequire="RedMattis.BetterPrerequisites">0.1</SM_AcidDmgMult>
      <SM_BulletDmgMult MayRequire="RedMattis.BetterPrerequisites">0.1</SM_BulletDmgMult>
      <SM_ConcussiveDmgMult MayRequire="RedMattis.BetterPrerequisites">0.1</SM_ConcussiveDmgMult>
      <VEF_MassCarryCapacity MayRequire="OskarPotocki.VanillaFactionsExpanded.Core">300</VEF_MassCarryCapacity>
      <VEF_MeleeAttackDamageFactor MayRequire="OskarPotocki.VanillaFactionsExpanded.Core">2</VEF_MeleeAttackDamageFactor>
      <VEF_MeleeAttackSpeedFactor MayRequire="OskarPotocki.VanillaFactionsExpanded.Core">0.1</VEF_MeleeAttackSpeedFactor>
    </statFactors>
     <!--In and out of space bonuses-->
  <conditionalStatAffecters>
      <li Class="ConditionalStatAffecter_NotInSpace" MayRequire="Ludeon.Rimworld.Odyssey">
        <statOffsets>
          <MoveSpeed>0.4</MoveSpeed>
          <WorkSpeedGlobal>0.1</WorkSpeedGlobal>
        </statOffsets>
      </li>
      <li Class="ConditionalStatAffecter_InSpace" MayRequire="Ludeon.Rimworld.Odyssey">
        <statOffsets>
          <MoveSpeed>0.4</MoveSpeed>
          <WorkSpeedGlobal>0.1</WorkSpeedGlobal>
        </statOffsets>
      </li>
  </conditionalStatAffecters>
    <!-- Damage resistance -->
    <damageFactors>
      <Blunt>0.1</Blunt>
      <Bomb>0.1</Bomb>
      <Bullet>0.1</Bullet>
      <Burn>0</Burn>
      <Cut>0.1</Cut>
      <Demolish>0.1</Demolish>
      <EMP>0.1</EMP>
      <Flame>0</Flame>
      <Scratch>0.1</Scratch>
      <Stab>0.1</Stab>
      <RangedStab>0.1</RangedStab>
      <Thump>0.1</Thump>
      <Vaporize>0.1</Vaporize>
      <AcidBurn>0.1</AcidBurn>
      <BulletToxic MayRequire="Ludeon.RimWorld.Biotech">0.1</BulletToxic>
      <ScratchToxic MayRequire="Ludeon.RimWorld.Biotech">0.1</ScratchToxic>
      <Psychic MayRequire="Ludeon.RimWorld.Anomaly">0.1</Psychic>
      <Nerve MayRequire="Ludeon.RimWorld.Anomaly">0.1</Nerve>
      <EnergyBolt MayRequire="Ludeon.RimWorld.Anomaly">0.1</EnergyBolt>
    </damageFactors>
    
    <!-- Hediff prevention (Superclotting, Unstoppable) -->
    <hediffGiversCannotGive>
      <li>BloodLoss</li>
      <li>Carcinoma</li>
      <li>HeartAttack</li>
      <li>BadBack</li>
      <li>Frail</li>
      <li>Cataract</li>
      <li>Dementia</li>
      <li>Alzheimers</li>
      <li>Asthma</li>
      <li>HeartArteryBlockage</li>
      <li>Cirrhosis</li>
      <li MayRequire="Fenn.floodrace">FloodBuildup</li>
      <li MayRequire="Fenn.floodrace">FloodInfection</li>
    </hediffGiversCannotGive>

    <makeImmuneTo>
      <li>Flu</li>
      <li>Malaria</li>
      <li>SleepingSickness</li>
      <li>Plague</li>
      <li>WoundInfection</li>
      <li>LungRot</li>
      <li>GutWorms</li>
      <li>MuscleParasites</li>
      <li>OrganDecay</li>
      <li>LungRotExposure</li>
    </makeImmuneTo>
    <exclusionTags>
    <li>Immunity</li>
   </exclusionTags>
    
    <!-- Disable biological needs -->
    <disablesNeeds>
      <li>Rest</li>
      <li>Comfort</li>
      <li>Food</li>
      <li>Beauty</li>
      <li>Indoors</li>
      <li>Outdoors</li>
      <li>RoomSize</li>
      <li>DrugDesire</li>
      <li>Chemical_Alcohol</li>
      <li>Chemical_Ambrosia</li>
      <li>Chemical_GoJuice</li>
      <li>Chemical_Luciferium</li>
      <li>Chemical_Psychite</li>
      <li>Chemical_Smokeleaf</li>
      <li>Chemical_WakeUp</li>
      <li MayRequire="syrchalis.coffeeandtea">Chemical_SyrCaffeine</li>
      <li MayRequire="Auxiliusm.luciferiumplus">Chemical_LuciferiumPlus</li>
      <li MayRequire="VanillaExpanded.VBrewE">VBE_Chemical_Caffeine</li>
      <li MayRequire="VanillaExpanded.VBrewE">VBE_Chemical_Tobacco</li>
      <li MayRequire="OskarPotocki.VFE.Insectoid">VFEI_Chemical_RoyalJelly</li>
    </disablesNeeds>
    
    <!-- Force the trait -->
    <forcedTraits>
      <li>
        <def>LK_VoidTrait</def>
      </li>
    </forcedTraits>
    
    <customEffectDescriptions>
      <li>Complete immunity to fire, toxic gas, and environmental hazards</li>
      <li>Heals injuries almost instantly and prevents permanent wounds</li>
      <li>Never ages biologically - effectively immortal</li>
      <li>Immune to pain, blood loss, stunning, and staggering</li>
      <li>Never mentally breaks or gets into social fights</li>
      <li>Does not require sleep,food or rest</li>
      <li>Enforces Void Faction Abilities trait</li>
    </customEffectDescriptions>
  </GeneDef>

  

</Defs>
