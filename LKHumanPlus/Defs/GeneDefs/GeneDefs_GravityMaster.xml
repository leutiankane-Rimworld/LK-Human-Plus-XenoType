<Defs> 
  <GeneDef>
    <defName>LK_Gravity_Master</defName>
    <label>Gravity Master</label>
    <labelShortAdj>grav-master</labelShortAdj>
    <description>Carriers of this gene move and work more easily in any gravity type. </description>
    <iconPath>UI/Icons/Genes/Gene_LowGravityAdapted</iconPath>
    <displayOrderInCategory>20</displayOrderInCategory>
    <customEffectDescriptions>
      <li MayRequire="Ludeon.Rimworld.Odyssey">Breathless</li>
      <li MayRequire="kentington.saveourship2">SOS 2 space compatible</li>
      <li>Gifted and passionate in all skills</li>
    </customEffectDescriptions>
    <!--Vacuum burn immmunity-->
    <immuneToVacuumBurns MayRequire="Ludeon.Rimworld.Odyssey">true</immuneToVacuumBurns>
    <!--DarkVision-->
    <ignoreDarkness>true</ignoreDarkness>
    <!--Stat affectors-->
    <statOffsets>
    <CarryingCapacity>300</CarryingCapacity>
    <VEF_MassCarryCapacity MayRequire="OskarPotocki.VanillaFactionsExpanded.Core">300</VEF_MassCarryCapacity>
     <ComfyTemperatureMin>-273</ComfyTemperatureMin>
     <ComfyTemperatureMax>232</ComfyTemperatureMax>
     <VacuumResistance MayRequire="Ludeon.Rimworld.Odyssey">1</VacuumResistance>
     <HypoxiaResistance MayRequire="kentington.saveourship2">0.75</HypoxiaResistance>
     <DecompressionResistance MayRequire="kentington.saveourship2">0.75</DecompressionResistance>
     <VacuumSpeedMultiplier MayRequire="kentington.saveourship2">4</VacuumSpeedMultiplier>
    </statOffsets>
    <!--In and out of space bonuses-->
  <conditionalStatAffecters>
      <li Class="ConditionalStatAffecter_NotInSpace" MayRequire="Ludeon.Rimworld.Odyssey">
        <statOffsets>
          <MoveSpeed>0.4</MoveSpeed>
          <WorkSpeedGlobal>0.1</WorkSpeedGlobal>
        </statOffsets>
      </li>
      <li Class="ConditionalStatAffecter_InSpace" MayRequire="Ludeon.Rimworld.Odyssey">
        <statOffsets>
          <MoveSpeed>0.4</MoveSpeed>
          <WorkSpeedGlobal>0.1</WorkSpeedGlobal>
        </statOffsets>
      </li>
  </conditionalStatAffecters>
   <!--Skill Passions-->
      <passionMod>
      <skill>Mining</skill>
      <modType>AddOneLevel</modType>
      </passionMod>
    <!--Skill Gains-->
    <aptitudes>
    <Shooting>4</Shooting>
    <Melee>4</Melee>
    <Construction>4</Construction>
     <Mining>4</Mining>
    <Cooking>4</Cooking>
    <Plants>4</Plants>
    <Animals>4</Animals>
    <Crafting>4</Crafting>
    <Artistic>4</Artistic>
    <Medicine>4</Medicine>
    <Social>4</Social>
    <Intellectual>4</Intellectual>
    </aptitudes>
    <!--Stat bonuses-->
    <capMods>
      <li>
        <capacity>Manipulation</capacity>
        <offset>0.5</offset>
      </li>
      <li>
        <capacity>Sight</capacity>
        <offset>0.3</offset>
      </li>
      <li>
        <capacity>Hearing</capacity>
        <offset>0.5</offset>
      </li>
    </capMods>
    <!--Fire/cold damage immune-->
    <damageFactors>
      <Flame>0.0</Flame>
      <Frostbite>0</Frostbite>
    </damageFactors>
    <!--Complexity etc-->
    <biostatCpx>1</biostatCpx>
    <biostatMet>1</biostatMet>
  </GeneDef>
</Defs>