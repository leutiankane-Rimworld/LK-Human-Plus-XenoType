<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<FactionDef ParentName="FactionBase">
		<defName>LK_HumanPlus</defName>
		<label>evolved humans</label>
		<description>A group of genetically enhanced humans,they have managed to perfect their gene editing to the point of near perfection.</description>
		<pawnSingular>evolved human</pawnSingular>
		<pawnsPlural>evolved humans</pawnsPlural>
		<categoryTag>Outlander</categoryTag>
		<settlementGenerationWeight>0.3</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
